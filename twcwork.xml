<?xml version="1.0" encoding="utf-8"?>
<extension version="3.0" type="plugin" group="system" method="upgrade">
	<name>TWC Work</name>
	<author>Matt Neimeyer</author>
	<creationDate>October 1, 2013</creationDate>
	<copyright>(c) Thimbleweed Consulting 2013</copyright>
	<license>GNU/GPL</license>
	<authorEmail></authorEmail>
	<authorUrl>http://www.thimbleweedconsulting.com</authorUrl>
	<version>2013-10-06</version>
	<description>
	<![CDATA[
		TWC Work - Several Utility Functions
	]]>
	</description>
	<files>
		<filename plugin="twcwork">twcwork.php</filename>
	</files>
	<config>
		<fields name="params">
			<fieldset name="basic">

				<field	name="email_to"
						label="Email Debug To"
						required="required"
						type="email"
						validate="email"
						size="50"
						default="matt@twcsec.com"
						/>

				<field	name="email_group"
						label="Email Debug Groups"
						required="required"
						type="usergroup"
						default="8"
						multiple="multiple"
						size="10"
						/>

			</fieldset>
		</fields>
	</config>
</extension>
